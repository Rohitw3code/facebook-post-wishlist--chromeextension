{
  "manifest_version": 3,
  "name": "PostList Facebook Alert",
  "version": "1.0",
  "description": "A beautiful alert box when Facebook is detected",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["extension/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}